
# Dependencies (explicitly load tidyverse parts used)
library(dplyr)
library(tidyr)
library(purrr)
library(ggplot2)
library(svglite)   # for ggsave(..., device = svglite)

## Setup output directory for histograms -- setup_histogram_output_dir() ##
# Creates output directory for histogram plots if it doesn't exist
# @param out_dir Path to output directory (default: Box folder for headway histograms)
# @return Logical indicating if directory is ready and writable
setup_histogram_output_dir <- function(out_dir = file.path(path.expand("~"), "Library/CloudStorage/Box-Box/2024-tprs/output/headway_histograms/")) {
  cat("\n=== DIAGNOSTICS ===")
  cat("\nConfigured output directory:", out_dir)
  cat("\nDirectory exists before creation?", dir.exists(out_dir))
  if (!dir.exists(out_dir)) {
    dir.create(out_dir, recursive = TRUE, showWarnings = FALSE)
    cat("\nDirectory created.")
  }
  cat("\nDirectory exists after creation?", dir.exists(out_dir))
  is_writable <- file.access(out_dir, mode = 2) == 0
  cat("\nDirectory writable?", is_writable)
  cat("\n===================\n")
  
  return(invisible(is_writable))
}

## Validate critical headway for histogram analysis -- validate_critical_headway_histogram() ##
# Checks that raff_overall exists and extracts t_c_critical_s
# @return Numeric value of critical headway in seconds
validate_critical_headway_histogram <- function() {
  if (!exists("raff_overall", envir = parent.frame())) {
    stop("\n❌ ERROR: 'raff_overall' not found in environment.\n",
         "Please run 'HdwyStatAnlys.r' first to generate the critical headway Raff table.\n",
         "Then run this script to create histograms with the critical headway line.\n")
  }
  
  t_c_critical <- get("raff_overall", envir = parent.frame())$t_c_critical_s
  cat("✓ Using critical headway t_c =", round(t_c_critical, 2), "seconds\n")
  
  return(t_c_critical)
}

## Process camera back data with combined grouping -- process_cb_with_combined_groups() ##
# Computes headways and creates combined groups for specific date combinations
# @param camera_data Camera back data tibble (cb)
# @return Processed tibble with headway and combined_group columns
process_cb_with_combined_groups <- function(camera_data) {
  # Inspect input
  cat("\n--- Processing camera data ---\n")
  str(camera_data)
  head(camera_data)
  
  cb_processed <- camera_data %>%
    mutate(
      combined_group = case_when(
        site == "sr12" & date %in% as.Date(c("2025-07-07", "2025-07-11")) ~ "sr12_2025-07-07_and_11",
        TRUE ~ paste0(site, "_", date)
      )
    ) %>%
    group_by(site, date) %>%
    arrange(time, .by_group = TRUE) %>%
    # Use difftime for clarity; returns seconds as numeric
    mutate(headway = as.numeric(difftime(time, lag(time), units = "secs"))) %>%
    ungroup()
  
  return(cb_processed)
}

## Build summary statistics table -- build_histogram_stats_table() ##
# Creates summary statistics for each histogram group
# @param processed_data Tibble with combined_group and headway columns
# @return Tibble with n, mean_headway, and sd_headway for each combined_group
build_histogram_stats_table <- function(processed_data) {
  stats_tbl <- processed_data %>%
    group_by(combined_group) %>%
    summarise(
      n = sum(!is.na(headway)),
      mean_headway = ifelse(n == 0, NA_real_, mean(headway, na.rm = TRUE)),
      sd_headway   = ifelse(n <= 1, NA_real_, sd(headway, na.rm = TRUE)),
      .groups = "drop"
    ) %>%
    arrange(combined_group)
  
  # Preview stats tibble
  print(stats_tbl)
  
  return(stats_tbl)
}

## Nest data and attach statistics -- nest_data_with_stats() ##
# Groups data by combined_group, nests, and joins with summary statistics
# @param processed_data Tibble with combined_group and headway columns
# @param stats_tbl Summary statistics tibble
# @return Nested tibble with data and stats for each combined_group
nest_data_with_stats <- function(processed_data, stats_tbl) {
  groups_nested <- processed_data %>%
    group_by(combined_group) %>%
    nest() %>%
    left_join(stats_tbl, by = "combined_group") %>%
    arrange(combined_group)
  
  return(groups_nested)
}

## Create and save histogram plots with stats and outliers -- create_save_histograms() ##
# Generates histogram plots with density curves, statistics, outliers, and critical headway line
# @param groups_nested Nested tibble with data and stats for each group
# @param t_c_critical Critical headway value in seconds
# @param out_dir Output directory for saving plots
# @return Invisible NULL (saves plots as side effect)
create_save_histograms <- function(groups_nested, t_c_critical, out_dir) {
  purrr::pwalk(groups_nested, function(combined_group, data, n, mean_headway, sd_headway) {
    filename <- paste0("headway_", combined_group, ".svg")
    
    # X-axis limit rule
    x_limit <- if (grepl("us191", combined_group)) 500 else 200
    
    # Outliers (above x_limit)
    outliers <- data %>%
      filter(headway > x_limit) %>%
      select(headway) %>%
      arrange(desc(headway)) %>%
      mutate(headway = round(headway, 1))
    
    # Histogram + density
    p_hist <- data %>%
      ggplot(aes(x = headway)) +
      geom_histogram(
        binwidth = 2,
        fill = "steelblue",
        alpha = 0.7,
        aes(y = after_stat(density)),
        na.rm = TRUE
      ) +
      geom_density(color = "steelblue", linewidth = 1, na.rm = TRUE) +
      scale_x_continuous(limits = c(0, x_limit)) +
      labs(
        title = paste0("Headway Distribution - ", combined_group),
        x = "Headway (seconds between cars)",
        y = "Density"
      ) +
      theme_minimal() +
      theme(plot.title = element_text(hjust = 0.5, size = 14))
    
    # --- Stats annotation (top-right) ---
    fmt_val <- function(x) ifelse(is.na(x), "NA", sprintf("%.1f s", x))
    stats_text <- paste0(
      "n = ", n, "\n",
      "mean = ", fmt_val(mean_headway), "\n",
      "sd = ", fmt_val(sd_headway)
    )
    
    p_hist <- p_hist +
      annotate(
        "label",
        x = x_limit * 0.95, y = Inf,
        label = stats_text,
        vjust = 1.1, hjust = 1, size = 3.5,
        fill = "white", color = "black", label.size = 0.2
      )
    
    # --- Outlier annotation (top-right), if any ---
    if (nrow(outliers) > 0) {
      outlier_text <- paste(paste0(outliers$headway, " s"), collapse = "\n")
      full_text <- paste0("Outliers (>", x_limit, " s):\n", outlier_text)
      
      p_hist <- p_hist +
        annotate(
          "label",
          x = x_limit * 0.70, y = Inf,
          label = full_text,
          vjust = 1.1, hjust = 0.5, size = 3.5,
          fill = "white", color = "black", label.size = 0.2
        )
    }
    
    # --- Add critical headway vertical line ---
    if (!is.na(t_c_critical) && t_c_critical <= x_limit) {
      p_hist <- p_hist +
        geom_vline(
          xintercept = t_c_critical,
          color = "red",
          linetype = "dashed",
          linewidth = 1
        ) +
        annotate(
          "text",
          x = t_c_critical,
          y = Inf,
          label = sprintf("Critical headway\nt_c = %.1f s", t_c_critical),
          vjust = 1.5,
          hjust = ifelse(t_c_critical < x_limit * 0.5, -0.1, 1.1),
          color = "red",
          size = 3.5,
          fontface = "bold"
        )
    }
    
    # Save SVG
    full_path <- file.path(out_dir, filename)
    ggsave(full_path, plot = p_hist, device = svglite, width = 10, height = 6)
    cat("\n✓ Saved:", full_path)
    cat("\n  File exists?", file.exists(full_path), "| Size:", file.size(full_path), "bytes")
  })
  
  cat("\n\n=== All histograms saved to:", out_dir, "===")
  
  invisible(NULL)
}

## Main function to run complete histogram analysis -- run_histogram_analysis() ##
# Orchestrates the entire histogram generation workflow
# @param camera_data Camera back data (cb object)
# @param out_dir Output directory path
# @return List containing processed_data, stats_tbl, and groups_nested
run_histogram_analysis <- function(camera_data = NULL,
                                   out_dir = file.path(path.expand("~"), "Library/CloudStorage/Box-Box/2024-tprs/output/headway_histograms/")) {
  # Load camera_back data if not provided
  if (is.null(camera_data)) {
    if (!exists("cb", envir = parent.frame())) {
      stop("Camera back data 'cb' not found. Please provide camera_data parameter or ensure 'cb' exists in environment.")
    }
    camera_data <- get("cb", envir = parent.frame())
  }
  
  # Setup
  setup_histogram_output_dir(out_dir)
  t_c_critical <- validate_critical_headway_histogram()
  
  # Process data
  cb_processed <- process_cb_with_combined_groups(camera_data)
  
  # Build stats table
  stats_tbl <- build_histogram_stats_table(cb_processed)
  
  # Nest data with stats
  groups_nested <- nest_data_with_stats(cb_processed, stats_tbl)
  
  # Create and save histograms
  create_save_histograms(groups_nested, t_c_critical, out_dir)
  
  # View stats table
  utils::View(stats_tbl)
  
  # Return results
  return(list(
    processed_data = cb_processed,
    stats_tbl = stats_tbl,
    groups_nested = groups_nested
  ))
}

